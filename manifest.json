{
  "manifest_version": 3,
  "name": "Hello World",
  "version": "1.0.0",
  "description": "Just saying hello",
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ]
    }
  ],
  "action":  {
    "default_title": "Hello world",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "tabs"]
}