{
    "manifest_version": 3,
    "name": "A simple test extension",
    "description": "Runs a script when user click the this",
    "version": "1.0",
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": ["storage", "downloads", "tabs", "contextMenus"]
  }
  